pipeline {
    agent any
    
    stages{
        stage('build'){
            steps{
                bat "mvn clean compile"
            }
             post {
		        always {
		            echo 'compile done'
		        }
		        success {
		            echo 'I succeeeded!'
		        }
		        unstable {
		            echo 'I am unstable :/'
		        }
		        failure {
		            echo 'I failed :('
		        }
		        changed {
		            echo 'Things were different before...'
		        }
    }
        }
        stage('test'){
            steps{
                bat "mvn test"
            }
        }
        stage('package'){
        	steps{
                bat "mvn -DskipTests package"
            }
        }
        stage('deliver'){
        	steps{
        		bat "./scripts/deliver.bat"
        	}
        }
    }
}